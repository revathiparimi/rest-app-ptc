<%if params["action"]=="edit"%>
<%@action = 'update'%>
<%@method = 'put'%>
<%else%>
<%@action = 'create'%>
<%@method = 'post'%>
<%end%>

<%= simple_form_for @article,:url=>url_for(:action =>@action,:controller => 'yoadmin/articles'),:method=>@method do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.select :tag_ids, @tags, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success pull-right" %>
  </div>
<% end %>

<script type="text/javascript">
  $(function() {
    $('select').selectize({plugins: ['remove_button']});
    // $('select').selectize({});
  });
</script>