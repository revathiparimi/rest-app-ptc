<h1>CDEE Articles<%#= link_to 'New Article', new_yoadmin_article_path, class: "btn btn-success pull-right" %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.data %></td>
        <td><%= link_to 'Show', article_path(article), class: "btn btn-info" %></td>
        <td><%#= link_to 'Edit', edit_article_path(article), class: "btn btn-warning" %></td>
        <td><%= button_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span class="pull-right"><%= paginate @articles %></span>
